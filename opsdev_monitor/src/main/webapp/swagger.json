  "host": "localhost:9001",
  "basePath": "/api",
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/obj/{page}": {
      "get": {
         "tags": [
          "obj"
        ],
        "summary": "监控对象列表",
        "description": "根据页数查询监控对象",
        "operationId": "getObjs",
        "parameters": [
          {
            "name": "page",
            "in": "path",
            "description": "当前页数",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ObjList"
            }
          },
          "400": {
            "description": "查找失败"
          },
          "404": {
            "description": "没有权限"
          }
        }
      }
    },
    "/obj":{
      "post": {
        "tags": [
          "obj"
        ],
        "summary": "添加监控对象",
        "description": "",
        "operationId": "add",
        "parameters": [
          {
            "in": "data",
            "name": "body",
            "description": "监控对象实体",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ObjBean"
            }
          }
        ],
        "responses": {
          "200":{
            "description":"success operated",
             "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ApiResponse"
              }
            }
          },
          "405": {
            "description": "添加失败"
          }
        }
    }
    }
  },
  "tags": [
    {
      "name": "obj",
      "description": "监控对象"
    }
  ],
  "definitions": {
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "ObjBean": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "description": "主键编号"
        },
        "name": {
          "type": "string",
          "description": "服务对象显示名称"
        },
        "host": {
          "type": "string",
          "description": "服务所在服务器"
        },
        "port": {
          "type": "integer",
          "format": "int64",
          "description": "服务提供监控端口"
        },
        "enabled": {
          "type": "boolean",
          "description": "是否启用监控"
        },
        "healthly": {
          "type": "integer",
          "format": "int64",
          "description": "是否健康：1=健康 2=不健康"
        },
        "status": {
          "type": "integer",
          "format": "int64",
          "description": "状态：1=正常 2=警告 3=错误"
        }
      }
    },
    "ObjList": {
      "type": "object",
      "properties": {
        "total": {
          "type": "integer",
          "format": "int32",
          "description": "总条数"
        },
        "pageSize": {
          "type": "integer",
          "format": "int32",
          "description": "每页数量"
        },
        "page": {
          "type": "integer",
          "format": "int32",
          "description": "当前页"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ObjBean"
          }
        }
      }
    }
  },
